<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_form_inherit_helpdesk_ticket" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.helpdesk.ticket</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <field name="partner_id" position="after">
                <field name="ticket_id" readonly="1" invisible="1"/>
                <field name="allowed_product_ids" invisible="1"/>
                <field name="allowed_product_template_ids" invisible="1"/>
            </field>

            <xpath expr="/form/sheet/notebook/page[@name='order_lines']/field[@name='order_line']/list/field[@name='product_template_id']" position="attributes">
                <attribute name="domain">[('sale_ok', '=', True), ('id', 'in', allowed_product_template_ids)]</attribute>
            </xpath>

            <xpath expr="/form/sheet/notebook/page[@name='optional_products']/field[@name='sale_order_option_ids']/list/field[@name='product_id']" position="attributes">
                <attribute name="domain">[('sale_ok', '=', True), ('id', 'in', allowed_product_ids)]</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_sales_order_form_remove_catalog_button" model="ir.ui.view">
        <field name="name">sale.order.form.remove.catalog.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//control/button[@name='action_add_from_catalog']" position="replace"/>
        </field>
    </record>
</odoo>