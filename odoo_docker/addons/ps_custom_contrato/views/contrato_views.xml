<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ps_custom_contrato.view_form" model="ir.ui.view">
        <field name="name">ps_custom_contrato.form</field>
        <field name="model">ps_custom_contrato.contrato</field>
        <field name="arch" type="xml">
            <form string="Contrato">
                <sheet>
                    <group>
                        <field name="cliente_id"/>
                        <field name="tipo_contrato"/>
                        <field name="tipo_servicio"/>
                        <field name="fecha_vencimiento"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ps_custom_contrato.view_list" model="ir.ui.view">
        <field name="name">ps_custom_contrato.list</field>
        <field name="model">ps_custom_contrato.contrato</field>
        <field name="arch" type="xml">
            <list string="Contratos">
                <field name="cliente_id"/>
                <field name="tipo_contrato"/>
                <field name="tipo_servicio"/>
                <field name="fecha_vencimiento"/>
            </list>
        </field>
    </record>

    <record id="action_contrato" model="ir.actions.act_window">
        <field name="name">Contratos</field>
        <field name="res_model">ps_custom_contrato.contrato</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="ps_custom_contrato.view_root"
              name="Contratos"
              parent="contacts.menu_contacts"  action="action_contrato"
              sequence="10"/>
</odoo>