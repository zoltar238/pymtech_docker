<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="purchase_explore_bundle_bi" model="ir.ui.view">
            <field name="name">purchase.explore.bundle.bi.form</field>
            <field name="model">purchase.explore.bundle.bi</field>
            <field name="arch" type="xml">
                <form string="Product Bundle">
                    <group col="4">
                        <field name="product_id" context="{'default_is_pack': True}" domain="[('is_pack', '=', True)]"/>
                        <field name="product_qty"/>
                        <field name="product_price"/>
                    </group>
                    <group>
                        <field name="pack_ids" invisible="not product_id">
                            <form string="Bundle Product">
                                <group>
                                    <field name="product_id"/>
                                    <field name="uom_id"/>
                                    <field name="qty_uom"/>
                                    <field name="bi_image"/>
                                </group>
                            </form>

                            <list>
                                <field name="product_id"/>
                                <field name="qty_uom"/>
                                <field name="uom_id"/>
                            </list>
                        </field>
                    </group>
                    <footer>
                        <button name="button_explore_bundle_purchase" string="Add Exploded Bundle Products"
                                type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="purchase_act_explore_bundle_wizard" model="ir.actions.act_window">
            <field name="name">Exploded Product Bundle</field>
            <field name="res_model">purchase.explore.bundle.bi</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="purchase_explore_bundle_bi"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
