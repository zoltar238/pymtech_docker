<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_bundle_product_form_view" model="ir.ui.view">
            <field name="name">product.product.pack</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="is_pack"/>
                        <label for="is_pack"/>
                    </div>
                </xpath>
                <field name="list_price" position="replace">
                    <field name="list_price" class="oe_inline" widget="monetary" readonly="cal_pack_price"
                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                </field>
                <group name="group_standard_price" position="inside">
                    <field name="cal_pack_price" invisible=" not is_pack "/>
                </group>
                <xpath expr="//page[@name='inventory']" position="after">
                    <page string='Pack Products' invisible="not is_pack" name="pack_product">
                        <field name="pack_ids">
                            <list string="Pack Products" editable="bottom">
                                <control>
                                    <create string="Add a product"/>
                                </control>
                                <field name="product_id"/>
                                <field name="qty_uom"/>
                                <field name="bi_image" class="oe_avatar" widget="image"/>
                            </list>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

        <record id="product_template_inherit_form" model="ir.ui.view">
            <field name="name">product.product.pack</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='variants']" position="attributes">
                    <attribute name="class">is_pack</attribute>
                </xpath>

                <xpath expr="//notebook/page[@name='variants']" position="after">
                    <page string="Variants" name="bi_variants" invisible=" not is_pack ">
                        <h1>You cannot create variants of the Pack</h1>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="product_bundle_product_search_view" model="ir.ui.view">
            <field name="name">product.template.search</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//search/filter[@name='filter_to_sell']" position="after">
                    <filter string="Is a pack" name="is_a_pack" domain="[('is_pack','=',1)]"/>
                </xpath>
            </field>
        </record>

        <record id="action_pack" model="ir.actions.act_window">
            <field name="name">Product Packs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="domain">[('is_pack', '=', True)]</field>
            <field name="context">{'default_is_pack':True}</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new product bundle
                </p>
            </field>
        </record>

        <record id="product_bundle_inherit_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='order_line']" position="before">
                    <button name="product_bundle_pack.bi_act_product_bundle_wizard" string="Add Bundle" type="action"
                            invisible="state == 'manual'"/>
                    <button name="product_bundle_pack.bi_act_explore_bundle_wizard" string="Add Exploded Bundle"
                            type="action" invisible="state == 'manual'"/>
                </xpath>
            </field>
        </record>

        <record id="product_bundle_inherit_purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='order_line']" position="before">
                    <button name="product_bundle_pack.purchase_product_bundle_wizard" string="Add Bundle" type="action"
                            invisible="state == 'manual'"/>
                    <button name="product_bundle_pack.purchase_act_explore_bundle_wizard" string="Add Exploded Bundle"
                            type="action" invisible="state == 'manual'"/>
                </xpath>
            </field>
        </record>

        <record id="view_res_config_purchase_inherit" model="ir.ui.view">
            <field name="name">res.config.settingsinherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@name='matrix_setting_container']" position="after">
                    <h2>Allow Bundle Pack on Purchase</h2>
                    <div class="row mt16 o_settings_container" id="allow_bundle_purchase">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <div class="content-group">
                                    <field name="allow_bundle"/>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Allow Bundle Pack on Purchase" for="allow_bundle"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <menuitem id="menu_product_pack_main"
                  name="Product Pack"
                  parent="sale.product_menu_catalog"
                  sequence="15"
                  action="action_pack"/>
    </data>
</odoo>

