<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_tooltip']" position="after">
                    <group string="Información del producto" name="product_info">
                        <field name="proveedor" widget="many2one_avatar"/>
                        <field name="marca"/>
                        <field name="modelo"/>
                        <field name="familia"/>
                        <field name="subfamilia"/>
                        <field name="estanteria"/>
                        <field name="balda"/>
                    </group>
                    <group string="Descuentos aplicables" name="descuentos" class="o_group_col_6">
                        <field name="descuento1" widget="percentage" decoration-info="descuento1 > 0"/>
                        <field name="descuento2" widget="percentage" decoration-warning="descuento2 > 0"/>
                        <field name="descuento3" widget="percentage" decoration-danger="descuento3 > 0"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="product_template_tree_view_inherit" model="ir.ui.view">
            <field name="name">product.template.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="proveedor" optional="show"/>
                    <field name="marca" optional="show"/>
                    <field name="modelo" optional="show"/>
                    <field name="familia" optional="show"/>
                    <field name="subfamilia" optional="show"/>
                    <field name="estanteria" optional="show"/>
                    <field name="balda" optional="show"/>
                    <field name="descuento1" widget="percentage" optional="hide"/>
                    <field name="descuento2" widget="percentage" optional="hide"/>
                    <field name="descuento3" widget="percentage" optional="hide"/>
                </xpath>
            </field>
        </record>
<!--        Barra de búsqueda-->
        <record id="product_template_search_view_inherit" model="ir.ui.view">
            <field name="name">product.template.search.view.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="proveedor" string="Proveedor"/>
                    <field name="marca" string="Marca"/>
                    <field name="modelo" string="Modelo"/>
                    <field name="familia" string="Familia"/>
                    <field name="subfamilia" string="Subfamilia"/>
                    <field name="estanteria" string="Subfamilia"/>
                    <field name="balda" string="Subfamilia"/>
                    <field name="descuento1" string="Descuento1"/>
                    <field name="descuento2" string="Descuento2"/>
                    <field name="descuento3" string="Descuento3"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>