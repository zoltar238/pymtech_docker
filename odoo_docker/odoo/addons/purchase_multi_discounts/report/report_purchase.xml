<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//th[@name='th_price_unit']" position="after">
            <th t-if="o.print_discount" class="text-right">Disc.(%)</th>
            <th t-if="o.print_discount_amount" class="text-right">Disc. Amount</th>
            <th t-if="o.print_discount" class="text-right">Disc. Unit Price</th>
        </xpath>
        <xpath expr="//td[5]" position="after">
            <td name='td_discount' t-if="o.print_discount" class="text-right">
                <span t-field="line.discount"/>
            </td>
            <td t-if="o.print_discount_amount" class="text-right">
                <span t-field="line.discount_amount"/>
            </td>
            <td t-if="o.print_discount" class="text-right">
                <span t-field="line.discounted_unit_price"/>
            </td>
        </xpath>
        <xpath expr="//tr[hasclass('is-subtotal')]" position="after">
            <t t-if="o.print_discount">
                <tr>
                    <td>Total Discount</td> 
                    <td class="text-right">
                        <span t-field="o.discount_amount"
                            t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                    </td>
                </tr>
            </t>
        </xpath>
    </template>


</odoo>
 